
  <% if flash[:alert] %>
    <p><%= flash[:alert] %></p>
  <% end %>
  <%= form_tag do %>
    <fieldset>
      <legend>Please Log In</legend>

        <%= label_tag :name, 'Name:' %>
        <%= text_field_tag :name, params[:name] %>

        <%= label_tag :password, 'Password:' %>
        <%= password_field_tag :password, params[:password] %>

        <%= submit_tag "Login" %>
    </fieldset>
  <% end %>

