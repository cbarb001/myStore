<h1>New product</h1>

<%= form_for(@product) do |f| %>
	<%= f.label :title %>
	<%= f.text_field :title %>

	<%= f.label :description %>
	<%= f.text_area :description, rows: 6 %>

	<%= f.label :price %>
	<%= f.text_field :price %>

	<%= f.label :category %><br>
    <%= f.text_field :category %>

	<%= f.file_field :avatar %>


	<%= f.submit %>
<%end%>

<br>

<%= link_to 'back to list of products', products_path%>